<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/button_basketball"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/basket_main_margin_basket"
        android:text="@string/basketball">

    </Button>
    <Button
        android:id="@+id/Volleyball"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/basket_main_margin_volleyball"
        android:text="@string/volleyball" />

    <Button
        android:id="@+id/Badminton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/basket_main_margin_volleyball"
        android:text="@string/badminton" />

    <Button
        android:id="@+id/Cricket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/basket_main_margin_volleyball"
        android:text="@string/cricket" />

</LinearLayout>

